<button type="button" id="create-post-button">Post something?</button>

<div id="create-post-body" class="create closed">
  <div class="create-post-menu">

    <div class="input-box">
      <label for="post-title-input">Create a title...</label>
      <textarea id="post-title-input" class="create-input" ></textarea>
      <label for="post-content-input">Write your post...</label>
      <textarea id="post-content-input" class="create-input" ></textarea>
    </div>

    <div class="post-buttons">
      <button type="button" id="post-cancel">Cancel</button>
      <button type="button" id="post-submit">Submit</button>
    </div>

  </div>
</div>
